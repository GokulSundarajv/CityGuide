<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:transitionName="transition_signUp"
    android:padding="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/signup_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:onClick="callprofileback"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:transitionName="transition_back_arrow_btn"/>



        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/inactive"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"></View>

        <TextView
            android:id="@+id/signup_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Settings"
            android:textColor="@color/black"
            android:layout_marginTop="1dp"
            android:textSize="25sp"
            android:transitionName="transition_title_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_perm_identity_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Account"
                    android:textColor="@color/black"
                    android:layout_marginLeft="40sp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                  />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/inactive"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"></View>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:onClick="changepassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:text="change password"
                        android:textAllCaps="false"
                        android:textColor="@color/inactive"
                        android:textSize="16dp"
                        android:layout_marginLeft="10sp"
                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="140dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>


                </LinearLayout>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:text="Content settings"
                        android:textColor="@color/inactive"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        android:layout_marginLeft="10sp"
                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="150dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>


                </LinearLayout>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:text="Language"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/inactive"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        android:layout_marginLeft="10sp"
                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="200dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>


                </LinearLayout>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:textColor="@color/inactive"
                        android:text="Privacy and security"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        android:layout_marginLeft="10sp"
                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="125dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>


                </LinearLayout>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_text_fields_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Others"
                    android:textColor="@color/black"
                    android:layout_marginLeft="40sp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    />


            </RelativeLayout>







            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/inactive"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"></View>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:textColor="@color/inactive"
                        android:text="New for you"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        android:layout_marginLeft="10sp"
                        />

                    <Switch
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="150dp"
                        />


                </LinearLayout>



            </RelativeLayout>




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:textColor="@color/inactive"
                        android:text="Theam"
                        android:layout_marginTop="10dp"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        android:layout_marginLeft="10sp"
                        />

                    <Switch
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="190dp"
                        />


                </LinearLayout>



            </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:textColor="@color/inactive"
                        android:text="Current Account"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        android:layout_marginLeft="10sp"
                        />

                    <Switch
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="126dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>


                </LinearLayout>



            </RelativeLayout>





        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:layout_width="160dp"
                android:layout_height="40sp"
                android:text="Sign Out"
                android:layout_centerHorizontal="true"
                android:background="@drawable/buttons"
                android:textColor="@color/black"
                android:layout_marginTop="50dp"
                ></Button>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>