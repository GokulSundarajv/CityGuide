<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeSElection"
    android:background="@color/white"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_24"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="MAKE\nselection"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="40sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Provide your Account's Email for which you want to reset your password"
            android:textColor="@color/black"
            android:textSize="18sp"></TextView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:background="@color/ligthwight"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mobile_icone"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_baseline_phone_android_24"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:id="@+id/mobile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Via Sms"
            android:textSize="18sp"
            android:layout_toRightOf="@id/mobile_icone"></TextView>

            <TextView
                android:id="@+id/mobile_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="+919344350383"
                android:textColor="@color/black"
                android:layout_below="@id/mobile_title"
                android:textSize="25sp"
                android:layout_toRightOf="@id/mobile_icone"></TextView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"></Button>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:background="@color/ligthwight"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mobile_icone1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_baseline_email_24"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:id="@+id/mobile_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Via Email"
                android:textSize="18sp"
                android:layout_toRightOf="@id/mobile_icone1"></TextView>

            <TextView
                android:id="@+id/mobile_des1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="support@gmail.com"
                android:textColor="@color/black"
                android:layout_below="@id/mobile_title1"
                android:textSize="25sp"
                android:layout_toRightOf="@id/mobile_icone1"></TextView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"></Button>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>